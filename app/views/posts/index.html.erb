<div class="boxes-wrapper-field">
  <div class="side-bar">
  </div>
  <div class="box-field">
    <div class="boxes">
      <% @posts.each do |post|%>
        <div class="box">
          <div class="box-left">
            <div class="box-infomation">
              <%= post.category.name %>
              <%= post.scheduled.name %>
            </div>
          </div>

          <div class="box-right">
            <div class="box-header">
              <div class="box-title">
                  <%= post.title %>
              </div>
                <div class="more">
                  <span>
                    <%= image_tag "arrow_top.png", class:"image-arrow", data:{index: post.id}%>
                  </span>
                  <ul class="more_list hidden", data-index="<%= post.id %>">
                    <li>
                      <%= link_to "詳細", post_path(post) %>
                    </li>
                    <% if user_signed_in? && current_user.id == post.user_id %>
                    <li>
                      <%= link_to "編集", edit_post_path(post) %>
                    </li>
                    <li>
                      <%= link_to "削除", post_path(post), data:{turbo_method: :delete}%>
                    </li>
                    <% end %>
                  </ul>
              </div>
            </div>
            <div class="box-main">
              <%= post.question %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
